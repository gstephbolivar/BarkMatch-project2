<!-- Hero content: will be in the middle -->
<div class="hero-body">
    <div class="container has-text-centered">
        <!-- Shelter Logo -->
        <img src="/assets/images/ahs.svg" alt="Logo" style="margin-top: -150%;">
        <!-- ADD DOG -->
        <div>
            <button id="addBtn" class="button is-large is-white">Add a Dog</button>
        </div>
        <br />
        <br />
        <br />
        <!-- DOGALOG -->
        <div class="columns is-desktop is-centered is-multiline">
            {{#each dogs}}
            <div class='column is-4'>
                <div class="card" style="margin: 10px;">
                    <div class="card-content is-centered">
                        <div class="card-image">
                            <figure class="image is-1by1">
                                <img src="{{img_path}}" alt="Picture of {{name}}" />
                            </figure>
                        </div>
                        <div class="media">
                            <div class="media-content">
                                <p class="title is-4 has-text-dark" id="dog-name">{{name}}</p>
                                <p class="subtitle is-6 has-text-dark">Age: {{age}} years</p>
                                <p class="subtitle is-6 has-text-dark">Breed: {{breed}}</p>
                                <p class="subtitle is-6 has-text-dark">Gender: {{gender}}</p>
                                <p class="subtitle is-6 has-text-dark">Size: {{size}}</p>
                                <p class="subtitle is-6 has-text-dark">Energy Level: {{energy_level}}</p>
                            </div>
                        </div>
                        <div class="content">
                            {{bio}}
                            <br />
                        </div>
                        <p class="subtitle is-6 has-text-dark">
                            {{#if available}}
                            Available
                            {{else}}
                            <p>Currently walking with {{Volunteer.name}}</p>
                            <p>Contact: {{Volunteer.phone}} </p>
                            {{/if}}
                        </p>
                    </div>
                    <footer class="card-footer">
                        <a href="/dashboard/edit/{{id}}" id="editBtn" class="card-footer-item">Edit</a>
                        <a class="card-footer-item deleteBtn" data-id="{{id}}" data-dogname="{{name}}">Delete</a>
                    {{#if available}}{{else}}<a id="availableBtn" class="card-footer-item availableBtn" name="{{available}}" data-id="{{id}}">Available</a>{{/if}}
                    </footer>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
