<section class="hero is-primary is-large">
    <!-- Hero head: will stick at the top -->
    <div class="hero-head">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item"> <img src="/assets/images/logo.svg" alt="Logo" style="width: 152px"> </a>
                </div>
            </div>
        </nav>
    </div>

    <!-- Hero content: will be in the middle -->
    <div class="hero-body">
        <div class="container has-text-centered">
            <!-- Shelter Logo -->
            <img src="/assets/images/ahs.svg" alt="Logo" style="margin-top: -150%;">
            <!-- ADD DOG -->
            <div id="add">
                <button class="button is-white">Add a Dog</button>
            </div>
            <br />
            <br />
            <br />
            <!-- DOGALOG -->
            <div class="columns is-mobile">
                <div class="column">
                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-1by1">
                                <img src={{img_path}} alt="Picture of {{name}}"/>
                            </figure>
                        </div>
                        {{#each dogs}}
                        <div class="card-content is-centered">
                            <div class="media">
                                <div class="media-content">
                                    <p class="title is-4 has-text-dark" id="dog-name">{{name}}</p>
                                    <p class="subtitle is-6 has-text-dark">Age: {{age}}</p>
                                    <p class="subtitle is-6 has-text-dark">Breed: {{breed}}</p>
                                    <p class="subtitle is-6 has-text-dark">Gender: {{gender}}</p>
                                    <p class="subtitle is-6 has-text-dark">Size: {{size}}</p>
                                    <p class="subtitle is-6 has-text-dark">Energy Level: {{energy_level}}</p>
                                </div>
                            </div>
                            <div class="content">
                                {{bio}}
                                <br />
                            </div>
                            <p class="subtitle is-6 has-text-dark">{{available}}</p>
                        </div>
                        <footer class="card-footer">
                            <a href="/dashboard/edit" class="card-footer-item edit-dog" id="{{id}}">Edit</a>
                            <a href="#" class="card-footer-item">Delete</a>
                        </footer>
                    </div>
                    {{/each}}
                </div>
                <div class="column"></div>
                <div class="column"></div>
                <div class="column"></div>
            </div>
        </div>
    </div>

    <!-- Hero footer: will stick at the bottom -->
    <div class="hero-foot">
        <nav class="tabs">
            <div class="container">
                <h5>Â© 2020 BarkMatch, Inc. All rights reserved</h5>
            </div>
        </nav>
    </div>
</section>

<script src="/assets/js/editDog.js"></script>