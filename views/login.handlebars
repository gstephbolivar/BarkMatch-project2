

{{!-- BULMA Login --}}
<section class="section" style="margin-top: 50px;">
  <div class="container has-text-centered">
    <div id="add-dog-headline"><img src="/assets/images/headlines/loginHeadline.svg" alt="add dog headline">
    </div>
    <div class="box" id="background-box">
      <div class="column is-half is-offset-one-quarter">
        <!-- LOGIN FORM -->
        <form class="login">
          <div class="form-group">
            <label for="username-input">Username</label>
            <input type="text" class="form-control input" id="username-input" placeholder="Username" required>
          </div>
          <div class="form-group">
            <label for="password-input">Password</label>
            <input type="password" class="form-control input" id="password-input" placeholder="Password" required>
          </div>
          <p id="error" style="display:none;color:blue">Invalid username or password.</p>



          <div class="field is-grouped is-grouped-centered" style="margin-bottom: 20px;">
            <p class="control">
              <button type="submit" style="margin-top: 20px" class="button is-info is-medium btn btn-default">
                Login
              </button>
            </p>
          </div>
        </form>
      </div>
    </div>
  </div>



</section>




<script type="text/javascript" src="/assets/js/login.js"></script>